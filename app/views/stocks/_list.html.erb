
<section id="stock-list">

  <table class="table table-striped">

    <thead>
      <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Current Price</th>

        <% if @user.id == current_user.id %>
            <th>Actions</th>
        <% end %>

      </tr>
    </thead>

    <tbody>

      <% @user_stocks.each do |stock| %>
          <tr>
            <td><%= stock.name %></td>
            <td><%= stock.ticker%></td>
            <td><%= stock.price %></td>

            <% if @user.id == current_user.id %>
                <td>
                  <%= link_to 'Delete', user_stock_path(stock), method: :delete, data: {:confirm => 'Really stop tracking this stock?'}, class: 'btn btn-danger btn-xs' %>
                </td>
            <% end %>

          </tr>
      <% end %>
    </tbody>
  </table>

</section>