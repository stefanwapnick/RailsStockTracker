<h2>User Details for <%= @user.full_name %></h2>

<dl class="dl-horizontal">

  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.full_name %></dd>

  <dt><strong>Emails</strong></dt>
  <dd><%= @user.email%></dd>

</dl>

<% if @user.stocks.size > 0 %>

    <%= render 'stocks/list' %>

<% else %>

    <p class="lead"> User is currently not tracking any stocks</p>

<% end %>

<%= link_to 'Back', my_friends_path, class: 'btn btn-class btn-primary' %>