<% if obj && obj.errors.any? %>
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title"> <%= pluralize(obj.errors.count, 'error') %>: </h3>
        <ul>
          <% obj.errors.full_messages.each do |msg|  %>
              <li><%= msg %></li>
          <% end %>s
        </ul>
      </div>
    </div>s
<% end %>
